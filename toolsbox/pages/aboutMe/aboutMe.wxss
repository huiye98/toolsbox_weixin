/* toolsbox/pages/aboutMe/aboutMe.wxss */
@import "../../style/guide.wxss";

.black {
  color: black;
}

.avatarInfo {
  display: flex;
  align-items: center;
  flex-direction: row;
  padding: 50 10rpx;
}

.avatarInfo .avatar {
  display: block;
  overflow: hidden;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 15rpx;
}

.avatarInfo .name {
  padding: 0 20rpx;
  font-size: 40rpx;
  color: dimgray;
}

.avatarInfo .big-avatar {
  display: block;
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
}

.codeimg {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.copyright {
  padding: 10rpx;
  font-weight: 650;
  font-size: 0.78rem;
  color:#888
}