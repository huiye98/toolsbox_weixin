/* toolsbox/pages/weatherCast/weatherCast.wxss */

page {
  -webkit-font-smoothing: antialiased;
  font-family: "PingHei", "Helvetica Neue", "Helvetica", "Arial", "Verdana", "sans-serif";
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  color:black;
  font-size: 30rpx;
}

.bcg {
  position: fixed;
  z-index: 2;
  height: 100%;
  width: 100%;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.search {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 70rpx;
  right: 0;
  width: 90%;
  height: 90rpx;
  /* background: #40a7e7; */
}
.searchTap {
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  position: fixed;
  z-index: 4;
  top: 30rpx;
  left: 40rpx;
  /* opacity: 0; */
}

.search .wrapper {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  margin: 15rpx 50rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  /* border-radius: 10rpx; *//* border: 1rpx solid #999; */
  border: none;
  border-bottom: 1rpx solid dimgray;
}

.search image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}

.search input {
  flex: 1;
}

.placeholderClass {
  color: black;
}

.container .content {
  flex: 2;
  transition: 0.3s ease;
}

.content {
  position: relative;
  z-index: 2;
}

.big-weather {
  display: flex;
  justify-content: center;
}

.big-weather image{
  width: 200rpx;
  height: 200rpx;
}

.info {
  padding: 10rpx 0 50rpx;
  /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
}

.info .temp, .info .weather {
  position: relative;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color:gray;
}

.info .weather {
  margin-bottom: 15rpx;
}

.city {
  display: flex;
  position: relative;
  padding: 0 40rpx;
  font-size: 40rpx;
  flex-direction: column;
}

.city .name {
  display: flex;
  align-items: center;
}

.city .name .val {
  max-width: 10em;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-weight: 600;
  font-size: 40rpx;
}

.city .name .icon, .city .name .down {
  width: 30rpx;
  height: 30rpx;
}

.city .name .icon {
  margin-right: 20rpx;
}

.city .name .down {
  margin-left: 20rpx;
}

.city .time {
  text-align: left;
  font-size: 24rpx;
  color: dimgray;
}

.message {
  font-size: 22rpx;
  color: black;
  padding: 30rpx 50rpx 0;
  box-sizing: border-box;
}

.temp {
  height: 60rpx;
  font-size: 60rpx;
  font-weight: 750;
  color: gray;
}

.guide .guides {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: flex-start;
  font-size: 24rpx;
  padding-top: 20rpx;
  /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
  background: white;
  margin-bottom: 20rpx;
  overflow-x: scroll;
}

.guide .title, .hourly .title, .livingIndextitle {
  /* border-bottom: 1rpx solid gainsboro; */
  background: white;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-weight: 700;
  color: gray;
}

.guide .item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  flex-shrink: 0;
  color: gray;
  padding: 25rpx;
  border: 1px lightgray solid;
  border-radius: 10px;
}

.guide image {
  width: 44rpx;
}

.guide .i {
  padding-bottom: 20rpx;
}

.guide .i.weather, .hour .weather {
  display: flex;
  justify-content: center;
  align-items: center;
}

.guide .i image, .hour .weather image {
  width: 40rpx;
  margin-left: 4rpx;
}

.hourly {
  margin-bottom: 20rpx;
}

.hourly .hours {
  padding: 20rpx 10rpx 0;
  background: white;
}

.hourly .hours .time {
  font-size: 22rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.details {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background: white;
  margin-bottom: 20rpx;
  font-size: 24rpx;
}

.hour {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background: rgb(107, 102, 102);
  font-size: 24rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}

.hourly swiper-item {
  box-sizing: border-box;
  padding: 0 10rpx;
  background: rgba(0, 0, 0, 0);
}

.details .detail, .hour .detail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
  height: 100rpx;
  width: 25%;
  border-right: 1rpx solid gainsboro;
  border-top: 1rpx solid gainsboro;
  box-sizing: border-box;
}

.details .detail:nth-child(4n), .hour .detail:nth-child(4n) {
  border-right: none;
}
.details .detail:nth-child(n+9), .hour .detail:nth-child(n+9) {
  border-bottom: 1rpx solid gainsboro;
}
.livingIndex {
  /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
  background: white;
  margin-bottom: 20rpx;
}

.livingIndex .item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-top: 1rpx solid gainsboro;
  padding: 20rpx 0;
  margin: 0 30rpx;
}

.livingIndex .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}

.livingIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.livingIndex .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}
